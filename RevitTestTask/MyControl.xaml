<UserControl x:Class="RevitTestTask.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitTestTask"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label HorizontalAlignment="Center" Margin="0px 20px 0px 0px" FontSize="15" >
            CALCULATE THE TOTAL VALUES OF YOUR PARAMETERS
        </Label>
        <Expander Header="Стены" IsExpanded="True" Margin="0,66,0,0" HorizontalAlignment="Center">
            <!-- Здесь размещается дополнительное содержимое -->
            <StackPanel>
                <Label x:Name="ElementNamesLabel" HorizontalAlignment="Center" Margin="0px 5px 0px 0px" FontSize="15"/>
                <Label x:Name="TotalLengthLabel" HorizontalAlignment="Center" Margin="0px 20px 0px 0px" FontSize="15"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
